{
  "dashboard": {
    "id": null,
    "title": "üöÄ URL Shortener - Live Dashboard",
    "tags": ["url-shortener", "microservices", "monitoring", "real-time"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "üìà URL Operations",
        "type": "timeseries",
        "description": "Real-time URL creation and redirection rates",
        "targets": [
          {
            "expr": "rate(url_shortener_creations_total[5m])",
            "legendFormat": "üÜï Creations",
            "refId": "A"
          },
          {
            "expr": "sum(rate(url_shortener_redirects_total[5m]))",
            "legendFormat": "üîó Redirects",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "ops/sec",
            "color": {"mode": "palette-classic"},
            "custom": {
              "gradientMode": "opacity",
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 2,
        "title": "üü¢ Service Health",
        "type": "stat",
        "description": "Backend API status",
        "targets": [
          {
            "expr": "up{job=\"url-shortener-backend\"}",
            "legendFormat": "Backend Status",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {"text": "üî¥ OFFLINE"},
                  "1": {"text": "üü¢ ONLINE"}
                }
              }
            ],
            "custom": {
              "displayMode": "color-background"
            }
          }
        }
      },
      {
        "id": 3,
        "title": "‚ö° Performance",
        "type": "timeseries",
        "description": "Response time percentiles (50th, 95th, 99th)",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(flask_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(flask_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(flask_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "palette-classic"},
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 5
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.5},
                {"color": "red", "value": 1.0}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "üö® Error Monitoring",
        "type": "timeseries",
        "description": "Error rates by type",
        "targets": [
          {
            "expr": "rate(flask_http_request_total{status=\"404\"}[5m])",
            "legendFormat": "üîç 404 Not Found",
            "refId": "A"
          },
          {
            "expr": "rate(flask_http_request_total{status=~\"5..\"}[5m])",
            "legendFormat": "üí• 5xx Server Errors",
            "refId": "B"
          },
          {
            "expr": "rate(url_shortener_custom_errors_total[5m])",
            "legendFormat": "‚öôÔ∏è Custom Errors",
            "refId": "C"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"},
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 8
            }
          }
        }
      },
      {
        "id": 5,
        "title": "üìä Request Analytics",
        "type": "timeseries",
        "description": "Request rate by endpoint",
        "targets": [
          {
            "expr": "rate(flask_http_request_total[5m])",
            "legendFormat": "{{endpoint}} - {{method}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 6,
        "title": "üéØ Success Rate",
        "type": "gauge",
        "description": "Percentage of successful requests",
        "targets": [
          {
            "expr": "(1 - (sum(rate(flask_http_request_total{status=~\"5..\"}[5m])) / sum(rate(flask_http_request_total[5m])))) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 4},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": {"mode": "continuous-GrYlRd"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99}
              ]
            },
            "custom": {
              "displayMode": "gradient",
              "orientation": "horizontal"
            }
          }
        }
      },
      {
        "id": 7,
        "title": "üî• Popular URLs",
        "type": "table",
        "description": "Top 10 most redirected URLs",
        "targets": [
          {
            "expr": "topk(10, url_shortener_redirects_total)",
            "legendFormat": "{{short_code}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "color-background",
              "align": "center"
            }
          }
        }
      },
      {
        "id": 8,
        "title": "üíæ System Resources",
        "type": "timeseries",
        "description": "Memory and CPU usage",
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1000000",
            "legendFormat": "üì¶ Memory (MB)",
            "refId": "A"
          },
          {
            "expr": "rate(process_cpu_seconds_total[5m]) * 100",
            "legendFormat": "‚ö° CPU %",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "lineWidth": 2
            }
          }
        }
      },
      {
        "id": 9,
        "title": "üóÑÔ∏è Database Health",
        "type": "stat",
        "description": "Database operation errors",
        "targets": [
          {
            "expr": "rate(url_shortener_custom_errors_total{error_type=~\"database|integrity\"}[5m])",
            "legendFormat": "DB Errors",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "ops/sec",
            "color": {"mode": "continuous-RdYlGr"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 0.5}
              ]
            },
            "custom": {
              "displayMode": "color-background"
            }
          }
        }
      },
      {
        "id": 10,
        "title": "üëë Total Stats",
        "type": "stat",
        "description": "Overall URL statistics",
        "targets": [
          {
            "expr": "sum(url_shortener_redirects_total)",
            "legendFormat": "Total Redirects",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 4},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "continuous-BlGr"},
            "custom": {
              "displayMode": "color-background"
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "10s",
    "version": 1,
    "schemaVersion": 36,
    "uid": "url-shortener-live-dashboard"
  }
}